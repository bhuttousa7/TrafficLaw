<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.usama.trafficlaw">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fine"
        android:roundIcon="@drawable/fine"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ContactUs" android:label="Contact Us">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY" android:value=".Dashboard"/>

        </activity>

        <activity android:name=".Feedback" android:label="Feedback and Report" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY" android:value=".Dashboard"/>
        </activity>
        <activity
            android:name=".ForgetPassword"
            android:label="Forgot Password">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".myProfile"
            android:label="My Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Dashboard" />
        </activity>
        <activity
            android:name=".ViewDetails"
            android:label="View Details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AllViolations" />
        </activity>
        <activity
            android:name=".AllViolations"
            android:label="All Violations">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Dashboard" />
        </activity>
        <activity
            android:name=".Status"
            android:label="Status">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Dashboard" />
        </activity>
        <activity
            android:name=".PaymentOptions"
            android:label="Payment Options">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewViolations" />
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".NewViolations"
            android:label="New Violations">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Dashboard" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dashboard"
            android:label="Dashboard" />
    </application>

</manifest>